<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1>New post</h1>

      <div class="post-box">
        <%= simple_form_for @post do |f| %>
        <div class="row">
          <%= f.input :title %>
        </div>
        <div class="row">
          <%= f.input :content %>
        </div>
        <div>
        <%= f.file_field :photos, multiple: true %>

       </div>
       <div>
        <%= f.submit "Create post" , class: "btn-primary", id: "form-button-home" %>
      </div>
      <div>
        <%= link_to 'Back to Posts', posts_path, class: "btn-primary" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
</div>
